# ==========================================
# Application Configuration
# ==========================================

# Environment
NODE_ENV=development

# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL Database Connection
DATABASE_URL=postgresql://bloguser:blogpass@localhost:5432/blogdb

# Database Host (for Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=blogdb
DB_USER=bloguser
DB_PASSWORD=blogpass

# ==========================================
# Redis Configuration
# ==========================================

# Redis Host (for Docker)
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# API Configuration
# ==========================================

# API URL
NEXT_PUBLIC_API_URL=http://localhost:4300/api

# API Timeout (in milliseconds)
API_TIMEOUT=10000

# ==========================================
# Site Configuration
# ==========================================

# Site URL (change this in production)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=我的博客
NEXT_PUBLIC_SITE_DESCRIPTION=分享技术知识和生活感悟的个人博客

# ==========================================
# Next.js Configuration
# ==========================================

# Next.js Port
PORT=3000

# Next.js Hostname
NEXT_PUBLIC_HOSTNAME=localhost

# ==========================================
# Java Service Configuration
# ==========================================

# Spring Boot Port
SERVER_PORT=4300

# Spring Profile
SPRING_PROFILES_ACTIVE=production

# Logging Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# SQL Logging (true/false) - only for development
SQL_LOGGING=false

# ==========================================
# Security Configuration
# ==========================================

# JWT Secret (generate a strong secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Session Secret
SESSION_SECRET=your-session-secret-change-in-production

# ==========================================
# Feature Flags
# ==========================================

# Enable Comments
NEXT_PUBLIC_COMMENTS_ENABLED=true

# Enable Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# ==========================================
# Deployment Configuration
# ==========================================

# Deployment Environment (development, staging, production)
DEPLOYMENT_ENV=development

# ==========================================
# SEO Configuration
# ==========================================

# Default SEO Image
NEXT_PUBLIC_OG_IMAGE=/og-image.png

# SEO Keywords (comma-separated)
NEXT_PUBLIC_SEO_KEYWORDS=博客,技术,编程,前端,后端,微服务

# ==========================================
# External Services
# ==========================================

# Email Service (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# CDN Configuration (optional)
CDN_URL=

# ==========================================
# Docker Configuration
# ==========================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=blog

# ==========================================
# Important Notes
# ==========================================

# 1. Copy this file to .env and fill in your values
# 2. Never commit .env file to version control
# 3. .env file is automatically loaded by Next.js
# 4. Use NEXT_PUBLIC_ prefix for variables exposed to browser
# 5. Docker Compose uses environment variables from this file
